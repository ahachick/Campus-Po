<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@id/iv_personal_page_bg"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="#c4dd79" />

        <ImageView
            android:id="@id/iv_user_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:background="@drawable/shape_bg_avatar_round"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_head_defalut" />

        <TextView
            android:id="@id/tv_user_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="纪嘉祥"
            android:textColor="#cd8549"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@id/tv_user_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_screen_name"
            android:layout_centerHorizontal="true"
            android:text="好好学习，天天向上"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_skill"
            android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="50dp"
            android:padding="5dp"
            android:text="L"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors" />

        <Button
            android:id="@+id/btn_poster"
            android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="50dp"
            android:padding="5dp"
            android:text="P"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors" />

        <Button
            android:id="@+id/btn_following"
            android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="50dp"
            android:padding="5dp"
            android:text="F"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors" />

        <Button
            android:id="@+id/btn_message"
            android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="50dp"
            android:padding="5dp"
            android:text="M"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="50dp"
            android:padding="5dp"
            android:text="D"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors" />
    </LinearLayout>

</LinearLayout>